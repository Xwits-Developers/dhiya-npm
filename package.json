{
  "name": "dhiya-npm",
  "version": "1.0.0",
  "description": "Client-side RAG (Retrieval-Augmented Generation) framework for browsers. Zero server dependency, multi-tier model fallback, production-ready.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "example": "npm run build && cd example && npm install --omit=optional && npx vite",
    "example:install": "cd example && npm install --omit=optional",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rag",
    "retrieval-augmented-generation",
    "client-side",
    "browser",
    "ai",
    "llm",
    "embeddings",
    "semantic-search",
    "chrome-ai",
    "transformers",
    "knowledge-base",
    "chatbot",
    "vector-search"
  ],
  "author": "Deep Parmar <deep.parmar@sunbots.in>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Xwits-Developers/dhiya-npm.git"
  },
  "bugs": {
    "url": "https://github.com/Xwits-Developers/dhiya-npm/issues"
  },
  "homepage": "https://github.com/Xwits-Developers/dhiya-npm#readme",
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "idb": "^8.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.16.0",
    "fake-indexeddb": "^6.2.3",
    "happy-dom": "^15.11.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
